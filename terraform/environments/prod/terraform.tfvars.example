# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control

# REQUIRED: Your public IP address for SSH access
# Find your IP by running: curl -4 ifconfig.me
# Format: "x.x.x.x/32" for single IP
allowed_ssh_cidr = "YOUR_IP_ADDRESS/32"

# AWS region (default: af-south-1 - Cape Town)
aws_region = "af-south-1"

# Instance type (default: t3.small)
# instance_type = "t3.small"

# Root volume size in GB (default: 30)
# root_volume_size = 30

# Additional tags (optional)
# additional_tags = {
#   Owner = "your-name"
#   CostCenter = "your-cost-center"
# }
